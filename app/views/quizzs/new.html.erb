<h1>New quizz</h1>

<%= form_for(@quizz) do |f| %>
  <% if @quizz.errors.any? %>
    <div class="error_explanation">
        <h2><%= pluralize(@quizz.errors.count, "error") %> prohibited this quizz from being saved:</h2>

        <ul>
            <% @quizz.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :ref %><br>
      <%= f.text_field :ref %>
  </div>
  <div class="field">
      <%= f.label :nom %><br>
      <%= f.text_field :nom %>
  </div>
  <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
  </div>

  <div class="field">
      <!-- On doit ajouter le lien avec la table des catégories. Comment gérer le fait qu'il y ai plusieurs catégorie possible ? -->
      <%= select_tag(:chapitre, options_from_collection_for_select(Chapitre.all, :id, :nom)) %>
  </div>
  <div class="field">
      <%= f.label :dateSuppression %><br>
      <%= f.datetime_select :dateSuppression %>
  </div>
  <div class="actions">
      <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', quizzs_path %>
