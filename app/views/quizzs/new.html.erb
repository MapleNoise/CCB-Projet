<% provide :titreH1, "New quizz"%>

<%= form_for(@quizz, html: {class: "formulaire--back"}) do |f| %>
  <% if @quizz.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@quizz.errors.count, "error") %> prohibited this quizz from being saved:</h2>

      <ul>
        <% @quizz.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field field--back">
    <span class="field__label"><%= f.label :ref %></span>
    <%= f.text_field( :ref, class: "field__control") %>
  </div>
  <div class="field field--back">
    <span class="field__label"><%= f.label :nom %></span>
    <%= f.text_field( :nom, class: "field__control") %>
  </div>
  <div class="field field--textarea field--back">
    <span class="field__label"><%= f.label :description %></span>
    <%= f.text_area( :description, class: "field__control") %>
  </div>

  <div class="field field--back">
    <span class="field__label">Chapitre</span>
    <!-- On doit ajouter le lien avec la table des catégories. Comment gérer le fait qu'il y ai plusieurs catégorie possible ? -->
    <%= select_tag(:chapitre, options_from_collection_for_select(Chapitre.all, :id, :nom), class: "field__control field__control--select") %>
  </div>
<div class="field field--back">
  <div class="actions">
    <%= f.submit  class: "button button--submit"%>
  </div>
</div>
<% end %>


<%= link_to 'Back', quizzs_path %>
