
<h3 class="section__content__title section__content__title--wide"><%= @produit.nom %></h3>
</div>
</section>  
<div class="produit">
  <section class="l-section section">

    <div class="section__content">
      <p id="notice">
        <%= notice %>
      </p>

      <div class="produit__general">
        <img class="produit__general__image" alt="img" src="/assets/images/logo-cap-coherence.png">
        <div class="produit__general__title">
          <%= @produit.nom %>
        </div>
        <% if @produit.prix > 0 %>
          <div class="produit__general__prix">
            <%= @produit.prix %>
          </div>
        <% else %>
          <!--<%=  TypeProduit.find_by(:id => @produit.type_produits_id).nom%>-->
          <% puts @produit.urlFichier %>
          <% if TypeProduit.find_by(:id => @produit.type_produits_id).nom == "Vidéo" %>
            <!-- Ici Ajouter la vidéo -->
            <div class="produit__general__lien--video">

            </div>
            <%= link_to("Visionner", @produit.urlFichier.identifier) %>
          <% elsif  TypeProduit.find_by(:id => @produit.type_produits_id).nom == "Son" %> 
            <!-- Ici Ajouter le son -->
            <div class="produit__general__lien--son">

            </div>
          <% elsif  TypeProduit.find_by(:id => @produit.type_produits_id).nom == "Fichier Word" %> 
            <div class="produit__general__lien--word">
              <%= link_to("Télécharger", @produit.urlFichier.url ) %>
            </div>
          <% elsif  TypeProduit.find_by(:id => @produit.type_produits_id).nom == "Fichier Excel" %> 
            <div class="produit__general__lien--excel">
              <%= link_to("Télécharger", @produit.urlFichier.url ) %>
            </div>
          <% elsif  TypeProduit.find_by(:id => @produit.type_produits_id).nom == "Fichier Pdf" %> 
            <div class="produit__general__lien--pdf">
              <%= link_to("Télécharger", @produit.urlFichier.url ) %>
            </div>
          <% elsif  TypeProduit.find_by(:id => @produit.type_produits_id).nom == "Image" %> 
            <div class="produit__general__lien--image">
              <%= link_to("Télécharger", @produit.urlFichier.url ) %>
            </div>
          <% else %> 
            <div class="produit__general__lien--fichier">
              <%= link_to("Télécharger", @produit.urlFichier.url ) %>
            </div>

          <% end %>





        <% end %>
        <div class="produit__general__description-courte">
          <%= @produit.descriptionCourte %>
        </div>
      </div>
    </div>
  </section>
  <section class="l-section section">
    <div class="section__content">
      <div class="produit__detail__description-longue">


        <%= @produit.description %>



        <p>
          <strong>Tag :</strong>
          <%= @produit.tags[0].nom %>
        </p>

      </div>
    </div>
  </section>
</div>

